#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <6>;
        map = <
                RC(1,2) RC(1,3)                                                 RC(1,13) RC(1,12)
RC(0,0) RC(0,1) RC(2,2) RC(2,3) RC(0,4) RC(0,5)                 RC(0,15) RC(0,14) RC(2,13) RC(2,12) RC(0,11) RC(0,10)
RC(1,0) RC(1,1) RC(3,2) RC(3,3) RC(1,4) RC(1,5)                 RC(1,15) RC(1,14) RC(3,13) RC(3,12) RC(1,11) RC(1,10)
RC(2,0) RC(2,1) RC(4,2) RC(4,3) RC(2,4) RC(2,5)                 RC(2,15) RC(2,14) RC(4,13) RC(4,12) RC(2,11) RC(2,10)
                RC(5,2) RC(5,3)                                                 RC(5,13) RC(5,12)
                                RC(0,6) RC(1,6) RC(2,6) RC(0,9) RC(1,9) RC(2,9)
                                RC(0,7) RC(1,7) RC(2,7) RC(0,8) RC(1,8) RC(2,8)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 1
            , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 2
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 3
            , <&gpio0 02 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 4
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 5
            , <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row 6
            ;

    };
};